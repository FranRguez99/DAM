<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/granasador_logo" />

    <TextView
        android:id="@+id/queSePedira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:fontFamily="@font/muli_bold"
        android:textColor="@color/colorPrimaryVariant"
        android:textSize="34dp" />

    <EditText
        android:id="@+id/cajanuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:fontFamily="@font/muli_bold"
        android:hint="@string/caja_plato"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/colorPrimaryVariant"
        android:textSize="16sp" />

    <Button
        android:id="@+id/botonAgrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryVariant"
        android:fontFamily="@font/muli_bold"
        android:text="@string/btn_plato"
        android:textColorHighlight="@color/colorPrimaryVariant"
        android:textSize="16dp" />

    <Button
        android:id="@+id/botonSuerte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@color/colorPrimaryVariant"
        android:fontFamily="@font/muli_bold"
        android:text="@string/btn_aleat"
        android:textSize="20dp" />


</LinearLayout>